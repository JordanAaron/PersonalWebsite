{
	"parser": "@babel/eslint-parser",
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"prettier",
		"plugin:react/recommended",
		"standard",
		"plugin:react/jsx-runtime",
		"plugin:testing-library/react",
		"plugin:jest/all"
	],
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"semi": [2, "always"]
	}
}